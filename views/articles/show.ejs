<%- include ("_header") %>
<div class="container">
	<h1 class="mb-1"><%= article.title %></h1>
	<div class="text-muted mb-2">
		<%= article.createdAt.toLocaleDateString() %>
	</div>
	<div class="mb-4">
		<a href="/blog" class="btn btn-secondary">All Articles</a>
		<a href="/articles/edit/<%= article.id %>" class="btn btn-info">Edit</a>
	</div>

	<div class="article"><%- article.sanitizedHtml %></div>
</div>
<%- include ("_footer") %>
